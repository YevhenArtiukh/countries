{% extends 'base.html.twig' %}

{% block title %}Podgląd użytkownika{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-12">
            <table class="table">
                <tbody>
                <tr>
                    <td scope="row">Imię</td>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <td scope="row">Nazwisko</td>
                    <td>{{ user.surname }}</td>
                </tr>
                <tr>
                    <td scope="row">E-mail</td>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <td scope="row">Wiek</td>
                    <td>{{ user.age }}</td>
                </tr>
                <tr>
                    <td scope="row">Ilość krajów odwiedzonych</td>
                    <td>{{ user.countries }}</td>
                </tr>
                </tbody>
            </table>
            <div class="text-right">
                <a class="btn btn-warning" href="{{ path('users') }}">Powrót</a>
            </div>
        </div>
    </div>
{% endblock %}
